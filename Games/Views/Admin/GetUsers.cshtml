@model IEnumerable<IdentityUser>

<h2>List of site users</h2>

<table class="table">
    <tr>
        <th>Username(email)</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <a asp-action="EditRole" asp-route-id="@user.Id" class="btn btn-info">Edit</a>
            </td>
            <td>
                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-secondary">Delete</a>
            </td>
        </tr>
    }
</table>
